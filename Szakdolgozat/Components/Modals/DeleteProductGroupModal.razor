@using Szakdolgozat.Models

<div class="modal-overlay">
    <div class="modal-window">
        <h3>Törlés megerősítése</h3>

        <p>Biztosan törlöd ezt a termékcsoportot?</p>
        <p><b>@Group.Name</b> (ID: @Group.Id)</p>

        <div class="button-row">
            <button class="delete-btn" @onclick="ConfirmDelete" type="button">Törlés</button>
            <button class="close-btn" @onclick="Close" type="button">Mégse</button>
        </div>
    </div>
</div>

@code {
    [Parameter] public ProductGroupItem Group { get; set; } = null!;
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback<int> OnDelete { get; set; }

    private Task Close() => OnClose.InvokeAsync();
    private Task ConfirmDelete() => OnDelete.InvokeAsync(Group.Id);
}
